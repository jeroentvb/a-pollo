<% include partials/head %>

<main>
  <h1><%= data.question %></h1>

  <section>
    <% data.options.forEach((option, i) => {
      if (option.title) { %>
        <h3><%= option.title %></h3>
        <p class="option<%= i + 1 %>value"><%= option.value %></p>
      <% }
    }) %>
  </section>

  <section id="share">
    <h3>Share this poll</h3>
    <a href="<%= data.url %>" target="_blank" id="share-link"><%= data.url %></a>
  </section>

  <section id="create">
    <h3>Create a poll</h3>
    <a href="/poll" class="button">Create</a>
  </section>
</main>

<script src="/js/poll-data.js"></script>

<% include partials/tail %>
